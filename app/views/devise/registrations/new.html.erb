<h2>新規アカウント作成</h2>
<div class="userContainer">
  <div class="deviseInfomation">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :name, "名前" %> <br />
        <%= f.text_field :name, class: "custom_Field_Devise" %>
      </div>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "custom_Field_Devise" %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "custom_Field_Devise" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "custom_Field_Devise" %>
      </div>
      <div class="selectButton">
        <%= link_to "キャンセル", :back, class: "btn btn-secondary custom-button" %>
        <%= f.submit "新規作成", class: "btn btn-success custom-button" %>
      </div>
    <% end %>
    <div class="deviseShared">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

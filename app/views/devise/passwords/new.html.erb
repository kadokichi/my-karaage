<h2>パスワードを忘れた場合</h2>
<div class="userContainer">
  <div class="deviseInfomation">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "custom_Field_Devise" %>
      </div>
      <div class="selectButton">
        <%= link_to "キャンセル", :back, class: "btn btn-secondary custom-button" %>
        <%= f.submit "パスワードを再設定する", class: "btn btn-success custom-button" %>
      </div>
    <% end %>
    <div class="deviseShared">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

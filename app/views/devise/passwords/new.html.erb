<div class="container">
  <div class="user-container mt-5 pt-5">
    <h2>パスワードを忘れた場合</h2>
    <div class="user-infomation">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "custom-field" %>
        </div>
        <div class="select-button">
          <%= link_to "キャンセル", :back, class: "btn btn-secondary custom-button" %>
          <%= f.submit "送信", class: "btn btn-success custom-button" %>
        </div>
      <% end %>
      <div class="devise-shared">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

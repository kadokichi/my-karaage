<h2>ログイン</h2>
<div class="userContainer">
  <div class="deviseInfomation">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "custom_Field_Devise" %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "custom_Field_Devise" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "覚えておく" %>
      </div>
      <% end %>
      <div class="selectButton">
        <%= link_to "キャンセル", :back, class: "btn btn-secondary custom-button" %>
        <%= f.submit "ログイン", class: "btn btn-success custom-button" %>
      </div>
    <% end %>
    <div class="deviseShared">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

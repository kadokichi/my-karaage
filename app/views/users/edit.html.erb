<h2>プロフィール編集</h2>
<div class="userContainer">
  <div class="userInfomation">
    <%= form_with model: @user do |f| %>
      <table>
        <tr>
          <th><%= f.label :image, "アイコン画像" %></th>
          <td><%= f.file_field :image, class: "custom_Input" %></td>
        </tr>
        <tr>
          <th><%= f.label :name, "名前" %></th>
          <td><%= f.text_field :name, class: "custom_Field" %></td>
        </tr>
      </table>
      <div class="selectButton">
        <%= link_to "キャンセル", @user, class: "btn btn-secondary custom-button" %>
        <%= f.submit "保存", class: "btn btn-success custom-button" %>
      </div>
    <% end %>
  </div>
</div>

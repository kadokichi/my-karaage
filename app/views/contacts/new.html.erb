<div class="contact-container mt-5 pt-5">
  <h2>お問い合わせ</h2>
  <div class="contact-infomation">
    <%= form_with model: @contact, url: confirm_contacts_path, local: true, data: { turbo: false } do |f| %>
      <div class="contact-field">
        <%= f.label :name, "お名前" %><br>
        <%= f.text_field :name, class: "custom-field" %>
      </div>
      <div class="contact-field">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.text_field :email, class: "custom-field" %>
      </div>
      <div class="contact-field">
        <%= f.label :subject, "件名" %><br>
        <%= f.text_field :subject, class: "custom-field" %>
      </div>
      <div class="contact-field">
        <%= f.label :message, "お問い合わせの内容" %><br>
        <%= f.text_area :message, class: "custom-area" %>
      </div>
      <div class="select-button">
        <%= link_to "キャンセル", root_path, class: "btn btn-secondary custom-button" %>
        <%= f.submit "確認", class: "btn btn-success custom-button" %>
      </div>
    <% end %>
  </div>
</div>

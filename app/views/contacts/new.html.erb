<h2>お問い合わせ</h2>

<div class="contactContainer">
  <div class="contactInfomation">
    <%= form_with model: @contact, url: confirm_contacts_path, local: true, data: { turbo: false } do |f| %>
      <div class="contactField">
        <%= f.label :name, "お名前" %><br>
        <%= f.text_field :name, class: "custom_contact_field" %>
      </div>
      <div class="contactField">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.text_field :email, class: "custom_contact_field" %>
      </div>
      <div class="contactField">
        <%= f.label :subject, "件名" %><br>
        <%= f.text_field :subject, class: "custom_contact_field" %>
      </div>
      <div class="contactField">
        <%= f.label :message, "お問い合わせの内容" %><br>
        <%= f.text_area :message, class: "custom_contact_area" %>
      </div>
      <div class="shopEdit">
        <%= link_to "キャンセル", root_path, class: "btn btn-secondary custom-button" %>
        <%= f.submit "確認", class: "btn btn-success custom-button" %>
      </div>
    <% end %>
  </div>
</div>
